{
  "manifest_version": 3,
  "name": "垂直分頁管理器",
  "version": "1.0.0",
  "description": "在側邊欄中垂直顯示和管理瀏覽器分頁，靈感來自 Arc 瀏覽器",
  "permissions": [
    "sidePanel",
    "tabs",
    "tabGroups",
    "storage",
    "favicon",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "開啟垂直分頁側邊欄",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
